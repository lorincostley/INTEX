    <script>
      var currentQuestion = 1;
      var totalQuestions = 18;

      function nextQuestion() {
        var currentQuestionElement = document.getElementById(
          "question" + currentQuestion
        );

        // Perform validation (you can customize this based on your needs)
        var input = currentQuestionElement.querySelector("input, select");
        if (input.checkValidity()) {
          currentQuestionElement.classList.remove("current");
          currentQuestion++;

          // Check if it's the last question
          if (currentQuestion === totalQuestions) {
            // Hide the "Next" button on the last question
            document.querySelector('button[type="button"]').style.display =
              "none";
            // Show the "Submit" button
            document.getElementById("submitButton").style.display = "block";
          }

          // Show the next question if not the last one
          if (currentQuestion <= totalQuestions) {
            document
              .getElementById("question" + currentQuestion)
              .classList.add("current");
          }
        } else {
          // Show an error message or take appropriate action
          alert("Please provide a valid answer.");
        }
      }

      function submitSurvey() {
        var surveyData = {};

        for (var i = 1; i <= totalQuestions; i++) {
          var input = document
            .getElementById("question" + i)
            .querySelector("input, select");
          surveyData[input.name] = input.value;
        }

        // Clear the survey form
        document.getElementById("surveyForm").reset();

        // Hide the form and show confirmation message
        document.getElementById("surveyForm").style.display = "none";
        document.getElementById("confirmationMessage").style.display = "block";
      }

      function handleGenderSelection() {
        var selectElement = document.getElementById("gender");
        var otherGenderInput = document.getElementById("otherGender");

        if (selectElement.value === "other") {
          otherGenderInput.classList.remove("hidden");
          otherGenderInput.setAttribute("required", "required"); // Add required attribute if needed
        } else {
          otherGenderInput.classList.add("hidden");
          otherGenderInput.removeAttribute("required");
        }
      }
